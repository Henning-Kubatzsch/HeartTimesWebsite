// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Participant {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  locale             String?
  mode               String
  teamId             String?
  name               String
  email              String
  selfIdentification String?
  notes              String?

  @@index([createdAt])
  @@index([teamId])
}